<mvc:View
    controllerName="leaverequestui5.controller.LeavePolicies"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">
    
    <Page title="Leave Policies">
        <content>
            <VBox class="sapUiSmallMargin">
                <items>
                    <HBox class="sapUiTinyMarginBottom" items="{/leavePolicies}">
                        <VBox class="policyBox sapUiTinyMargin">
                            <Text text="{policyName}" class="sapUiSmallMarginBottom"  />
                            <Text text="{policyDetails}" />
                        </VBox>
                    </HBox>
                </items>
            </VBox>
        </content>
    </Page>
</mvc:View>
