
<mvc:View
    controllerName="leaverequestui5.controller.Holidays"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page>
    <content>
        <Text text="HOLIDAYS" />
 
                  <Table id="idProductsTable"
        inset="false"
        items="{
            path: '/Holidays'
           
        }">
       
        
        <columns>
            <Column
                width="12em">
                <Text text="ID" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true">
                <Text text="Name" />
            </Column>
            <Column
                minScreenWidth="Tablet"
                demandPopin="true">
                <Text text="Date" />
            </Column>
           
        </columns>
        <items>
            <ColumnListItem vAlign="Middle">
                <cells>
                    <ObjectIdentifier
                        title="{ID}"
                        />
                    <Text
                        text="{name}" />
                    <Text
                        text="{date}" />
                   
                   
                       
                </cells>
            </ColumnListItem>
        </items>
    </Table>
      </content>  
    </Page>
</mvc:View>
 