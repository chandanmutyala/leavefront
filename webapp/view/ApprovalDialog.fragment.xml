<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog title="Approve Leave">
        <VBox>
            <Text text="{notifications>leaveDetails/description}" />
            <Text text="Start Date: {notifications>leaveDetails/startDate}" />
            <Text text="End Date: {notifications>leaveDetails/endDate}" />
        </VBox>
        <beginButton>
            <Button text="Approve" press="onApproveLeave" />
        </beginButton>
        <endButton>
            <Button text="Reject" press="onRejectLeave" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
